          header.w3-container.w3-teal
            h3.w3-left Registo de Utilizador
    .w3-container   
      form(method='POST', action='/registar')
        #form-group
          label Numero
          input.form-control(name='numero', type='text')
        #form-group
          label Nome
          input.form-control(name='nome', type='text')
        #form-group
          label Curso
          input.form-control(name='curso', type='text')
        #form-group
          label Password
          input.form-control(name='password', type='password')

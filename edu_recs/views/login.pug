extends layout

block content
  .container.my-5
    .row
      .col-10.offset-1.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        .card.shadow
          img(src="https://images.unsplash.com/photo-1464865885825-be7cd16fad8d?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=1950&q=80" alt="login" class="card-img-top" style="height: 10rem;")
          .card-body
            h5.card-title Login
            form(method='POST', action='/login')
              #form-group
                label.w3-text-teal 
                  b Username
                input.w3-input.x3-border.w3-light-grey.form-control(name='username', type='text' required autofocus)
              #form-group
                label.w3-text-teal 
                  b Password
                input.w3-input.x3-border.w3-light-grey.form-control(name='password', type='password' required)
              input.btn.btn-success.btn-block(type='submit', value='Login')
            a.btn(href="/authenticate/facebook" style="background: #3B5998; color: white;")
              i.fa.fa-facebook  Sign in with Facebook
            a.btn(href="/authenticate/google" style="  background: #dd4b39;color: white;")
              i.fa.fa-google-plus  Sign in with Google+
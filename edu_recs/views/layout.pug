                i.fa.fa-user
              a.nav-link(href='/logout') LOGOUT 
                i.fa.fa-sign-out
    main.container
      if (success && success.length > 0)
        .alert.alert-success.alert-dismissible.fade.show(role='alert')
          =success
          button.w3-right(class='close' type='button' data-dismiss='alert' aria-label='Close')
